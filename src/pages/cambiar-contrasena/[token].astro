---
import Layout from "../../layouts/Layout.astro";
import SeoMeta from "../../components/SeoMeta.astro";

const { token } = Astro.params;
---

<Layout title="Nueva Contrase単a">
    <SeoMeta slot="seo"/>

    <div class="container">
        <div class="row my-5">
            <div class="col-12 text-center">
                <h1 class="mb-5"></h1>
                <h1 class="secondary-font color-mycavi mb-4" data-aos="flip-up">Nueva contrase単a</h1>
            </div>
            <div class="col-md-6 offset-md-3 col-12 offset-0">
                <form id="change_password" class="customer-form row">
                    <div class="form-group mb-3 col-12">
                        <label for="pwd">Contrase単a:</label>
                        <input type="password" class="form-control" id="pwd-recovery" name="password" data-rule="required">
                    </div>
                    <div class="form-group mb-3 col-12">
                        <label for="pwd_confirm">Confirmar Contrase単a:</label>
                        <input type="password" class="form-control" id="pwd_confirm" name="confirm_password" data-rule="required">
                    </div>                
                    <div class="col-12 text-end">
                        <div class="alert-form"></div>
                        <input type="hidden" name="token" id="token" value={token}>
                        <button type="submit" class="btn btn-mycavi">GUARDAR</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</Layout>

