let subttl_carrusel = "";
let txt_carrusel = "";

if (titlesByCode[code_carrusel]) {
  const randomIndex = Math.floor(Math.random() * titlesByCode[code_carrusel].titles.length);
  ttl_carrusel = titlesByCode[code_carrusel].titles[randomIndex];
  subttl_carrusel = titlesByCode[code_carrusel].subtitles[randomIndex];
  txt_carrusel = titlesByCode[code_carrusel].texts[randomIndex];
}
---

<div id={code_carrusel}>
  <div class="container">
    {
      style === 'carrusel-products-1' && (
        <div class="row my-5">
          <div class="col-12 col-md-4 col-lg-3">
            <h6 class="carrusel-products-1--subttl secondary-font color-mycavi mb-0" innerHTML={subttl_carrusel} />
            <h3 class="carrusel-products--ttl carrusel-products-1--ttl secondary-font mb-4" data-aos="flip-up" set:html={ttl_carrusel} />
            <p>{txt_carrusel}</p>
          </div>
          <div class="col-12 col-md-8 col-lg-9" data-aos="fade-up">
            <div id={`slide_${code_carrusel}`} class="splide">
              <div class="splide__track">
                <ul id={`${code_carrusel}_products`} class="splide__list"></ul>
              </div>
            </div>
          </div>
        </div>
      )
    }

    {
      style === 'carrusel-products-2' && (
        <>
          <div class="row align-items-end mt-5 mb-4">
            <div class="col-12 col-lg-5 col-xl-4" style="min-width:min-content">
              <h2 class="carrusel-products--ttl carrusel-products-2--ttl secondary-font color-mycavi mb-0" data-aos="flip-up" set:html={ttl_carrusel} />
