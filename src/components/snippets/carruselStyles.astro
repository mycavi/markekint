            <div class="col-12 col-lg-6 mt-3">
              <h6 class="carrusel-products-2--subttl secondary-font mb-0"><strong>{subttl_carrusel}</strong></h6>
              <p class="mb-0">{txt_carrusel}</p>
            </div>
          </div>
          <div class="row mb-5">
            <div class="col-12" data-aos="fade-up">
              <div id={`slide_${code_carrusel}`} class="splide">
                <div class="splide__track">
                  <ul id={`${code_carrusel}_products`} class="splide__list"></ul>
                </div>
              </div>
            </div>
          </div>
        </>
      )
    }

    {
      style === 'carrusel-products-3' && (
        <>
          <div class="row mt-5 mb-4">
            <div class="col-12 offset-lg-2 col-lg-8 text-center">
              <h6 class="carrusel-products-3--subttl secondary-font color-mycavi mb-0">{subttl_carrusel}</h6>
              <h2 class="carrusel-products--ttl carrusel-products-3--ttl secondary-font" data-aos="flip-up">{ttl_carrusel.replace(/<[^>]+>/g, '')}</h2>
              <p class="mb-0">{txt_carrusel}</p>
            </div>
          </div>
          <div class="row mb-5">
            <div class="col-12" data-aos="fade-up">
              <div id={`slide_${code_carrusel}`} class="splide">
                <div class="splide__track">
                  <ul id={`${code_carrusel}_products`} class="splide__list"></ul>
                </div>
              </div>
            </div>
          </div>
        </>
      )
